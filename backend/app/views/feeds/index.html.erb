<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Lecteur de Flux RSS</h1>
      
      <div class="mb-3">
        <%= link_to 'Ajouter un nouveau flux', new_feed_path, class: 'btn btn-primary' %>
      </div>

      <% if @feeds.any? %>
        <div class="row">
          <% @feeds.each do |feed| %>
            <div class="col-md-6 mb-4">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">
                    <%= link_to feed.title, feed_path(feed) %>
                    <% if feed.unread_items_count > 0 %>
                      <span class="badge badge-primary"><%= feed.unread_items_count %></span>
                    <% end %>
                  </h5>
                  <p class="card-text text-muted"><%= feed.url %></p>
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      <%= pluralize(feed.feed_items.count, 'article') %>
                    </small>
                    <%= link_to 'Supprimer', feed_path(feed), 
                        method: :delete, 
                        data: { confirm: 'Êtes-vous sûr ?' },
                        class: 'btn btn-sm btn-danger' %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="alert alert-info">
          Aucun flux RSS ajouté. <%= link_to 'Ajoutez votre premier flux', new_feed_path %> pour commencer.
        </div>
      <% end %>
    </div>
  </div>
</div> 